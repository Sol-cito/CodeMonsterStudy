import java.util.*;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();

		int answer = 0;
		int arr[] = new int[n+1];
		arr[0] = 1;
		arr[1] = 3;

		int idx = 2;
		while (idx < n) {
			arr[idx] = (arr[idx - 1] + 2*arr[idx - 2]) % 10007;
			idx++;
		}

		answer = arr[n - 1] ;
		System.out.println(answer);
	}
}
