import java.util.*;

public class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int cases = sc.nextInt();
		while (cases-- > 0) {
			int answer = 0;

			int n = sc.nextInt();
			int m = sc.nextInt();

			answer = m * (n-m)+1;

			System.out.println(answer);
		}

	}
}
